# All config keys are optional
# Unnecessary config keys can be commented out or deleted
# Settings from this file can be overridden using corresponding CLI arguments

# Sensitive data is loaded from environment variables

# Boolean values must be either "true" or "false" - other values are invalid

# gRPC API host and port
api_address = "grpc.audiogram-demo.mts.ai:443"
use_ssl = true

# Path to a file holding PEM-encoded certificates
ca_cert_path = ""
cert_private_key_path = ""
cert_chain_path = ""

# Timeout to wait for gRPC response from server
timeout = 60

# Keycloak authentication credentials
client_id = "<YOUR_CLIENT_ID>"
client_secret = "<YOUR_CLIENT_SECRET>"

# OpenAI GPT settings
# These settings can be overridden by environment variables
# OPENAI_API_KEY, OPENAI_MODEL, OPENAI_TEMPERATURE
openai_api_key = "${OPENAI_API_KEY}"
openai_model = "gpt-4o"
openai_temperature = "0.3"

# IAM additional credentials
iam_account = "<YOUR_IAM_ACCOUNT>"
iam_workspace = "<YOUR_WORKSPACE>"

# Keycloak root URL
sso_url = "https://sso.dev.mts.ai"
realm = "audiogram-demo"
verify_sso = true 